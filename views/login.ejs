<% layout('layouts/boilerplate') %>
<script src="/js/lib/auth0-7.2.js"></script>
<script src="/js/lib/lock.min.js"></script>
<script type="text/javascript">
    var creds = JSON.parse('<%- JSON.stringify(env) %>');
    var lock = new Auth0Lock(creds.AUTH0_CLIENT_ID, creds.AUTH0_DOMAIN, {
        auth: {
            redirectUrl: creds.AUTH0_CALLBACK_URL,
            responseType: 'code',
            params: {
                scope: 'openid name email picture'
            }
        }
    });
    lock.show();
</script>